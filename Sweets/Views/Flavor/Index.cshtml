@{
  Layout = "_Layout";
}

@using Sweets.Models

<h1>Flavors</h1>
@if (Model.Count == 0)
{
	<h3>No Flavors Added Yet</h3>
}
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", "Flavor", new { id = flavor.FlavorId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add Flavor", "Create", "Flavor", null, new { @class = "btn btn-primary" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary" })</p>