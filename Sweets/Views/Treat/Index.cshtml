@{
  Layout = "_Layout";
}

@using Sweets.Models

<h1>Treats</h1>
@if (Model.Count == 0)
{
	<h3>No Treats Added Yet</h3>
}
else
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", "Treat", new { id = treat.TreatId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add Treat", "Create", "Treat", null, new { @class = "btn btn-primary" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary" })</p>